<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <title>{% block title %}Welcome!{% endblock %}</title>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark newNav">
                <a class="navbar-brand" href="#"><img height="35px" src="{# LOGO #}"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" href="{{ path('inicio') }}">Inicio <span class="sr-only">(current)</span></a>
                        <a class="nav-link" href="{{ path('listaHoteles') }}">Lista Hoteles</a>
                        <a class="nav-link" href="{{ path('newHotel') }}">Crear Hotel</a>
                        <a class="nav-link" href="{{ path('createUser') }}">Registrate</a>
                        {% if not is_granted('ROLE_USER') %}
                        <a class="btn btn-primary dark" href="{{ path('app_login') }}">Login</a>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                        <a class="btn btn-primary dark" href="{{ path('app_logout') }}">logout</a>
                        {% endif %}
                    </div>
                </div>
                {% if is_granted('ROLE_USER') %}
                    <p class="btn btn-primary dark">{{ app.user.username }}</p>
                {% endif %}
          
            </nav>
            {% block contenido %} {% endblock %}
        </div>
    </body>
</html>